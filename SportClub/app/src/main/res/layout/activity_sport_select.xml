<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".models.HomeActivity">

    <TextView
        android:id="@+id/txt_ss_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="104dp"
        android:text="@string/title_ss"
        android:fontFamily="@font/tomorrow"
        android:textSize="32dp"
        android:textStyle="bold"
        android:gravity="center">
    </TextView>

    <Button
        android:id="@+id/btn_sport_volley"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txt_ss_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="104dp"
        android:text="@string/sport_volley"
        android:backgroundTint="@color/black">
    </Button>




</androidx.constraintlayout.widget.ConstraintLayout>