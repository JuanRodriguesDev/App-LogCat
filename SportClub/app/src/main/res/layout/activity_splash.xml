<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".models.SplashActivity"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/img_splash_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/splash_art"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="-68dp"></ImageView>



    <TextView
        android:id="@+id/txt_sport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/tomorrow"
        android:text="@string/sport_text"
        android:textSize="60dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="72dp">

    </TextView>

    <TextView
        android:id="@+id/txt_club"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/tomorrow_thin"
        android:text="@string/club_text"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="64dp">

    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>